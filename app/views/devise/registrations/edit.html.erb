<% if RolesManagement::RolesManager.is_role_present?("Global Admin", current_user)%>
<%= render :partial => 'shared/global_admin_settings' %>
<%end%>

<% if RolesManagement::RolesManager.is_role_present?("Local Admin", current_user)%>
    <%= render :partial => 'shared/local_admin_settings' %>
<%end%>

<%= form_for(resource, :as => resource_name, :url => user_registration_path, :html => { :method => :put,:class=> "form-horizontal" }) do |f| %>
    <fieldset>
      <%= render "shared/form_errors", :object => resource %>
      <legend><h2>Change Password <%#= resource_name.to_s.humanize %></h2></legend>

      <div class="control-group">
        <label class="control-label" for="input01">Current Password</label>
        <div class="controls">
          <%= f.password_field :current_password,:class=>"input" %>
          <p class="help-block"></p>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="input01">New password</label>
        <div class="controls">
          <%= f.password_field :password,:class=>"input" %>
          <p class="help-block"></p>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="input01">Confirm new password</label>
        <div class="controls">
          <%= f.password_field :password_confirmation,:class=>"input" %>
          <p class="help-block"></p>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit "Update",:class =>"btn btn-primary"  %>
        <a class="btn" href="/">Cancel</a>
        <!--<input type="text" class="input-xlarge" id="input01">-->
      </div>
    </fieldset>

<% end %>

<% if RolesManagement::RolesManager.is_role_present?("User", current_user)%>
<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", user_registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>


<%end%>
