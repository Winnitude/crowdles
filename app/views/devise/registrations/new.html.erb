
<%= form_for(resource, :as => resource_name, :url => user_registration_path,:html => { :class => "form-horizontal"}) do |f| %>
    <fieldset>
      <%= render "shared/form_errors" ,:object => @user%>
      <legend><h2>Sign Up</h2></legend>
      <div class="control-group">
        <label class="control-label" for="input01">Email</label>
        <div class="controls">
          <%= f.email_field :email,:class=>"input" %>
          <!--<input type="text" class="input-xlarge" id="input01">-->
          <p class="help-block"></p>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="input01">Country</label>
        <div class="controls">
          <%= f.autocomplete_field :country,autocomplete_country_detail_name_path,:class=>"input" %>
          <!--<input type="text" class="input-xlarge" id="input01">-->
          <p class="help-block"></p>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <label class="checkbox inline" >
            <%= f.check_box :terms_of_service%>Accept terms
            <!--<input type="text" class="input-xlarge" id="input01">-->
          </label>
        </div>
      </div>
      <%= f.hidden_field :is_provider_terms_of_service, :value => 1%>
      <div class="form-actions">
        <%= f.submit "Sign up",:class =>"btn btn-primary"  %>
        <a class="btn" href="/">Cancel</a>
        <!--<input type="text" class="input-xlarge" id="input01">-->
      </div>
      <!--<div></div>-->

    </fieldset>
<% end %>

<%= content_for :head do  %>
    <script type="text/javascript">

        jQuery(function(){

            var country = new LiveValidation('user_country',{validMessage:" ",onlyOnSubmit:true});
            country.add( Validate.Presence );
             });
    </script>
<% end %>

