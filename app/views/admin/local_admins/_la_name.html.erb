
<% if (@user.present? && @user.profile.present?) %>
    <% fname = @user.profile.first_name %><% lname = @user.profile.last_name  %>


    <div class="control-group">
      <label class="control-label" for="input01"><%= label_tag "first_name: "%><span style="color:red"> </span></label>
      <div class="controls">
        <%= text_field_tag "profile[first_name]", fname,:class=>"input" %>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="input01"><%= label_tag "last_name: "%><span style="color:red"> </span></label>
      <div class="controls">
        <%= text_field_tag "profile[last_name]",lname,:class=>"input" %>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
       </div>

<%else%>


    <div class="control-group">
      <label class="control-label" for="input01"><%= label_tag "first_name: "%><span style="color:red"> </span></label>
      <div class="controls">
        <%= text_field_tag "profile[first_name]","",:class=>"input" %>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="input01"><%= label_tag "last_name: "%><span style="color:red"> </span></label>
      <div class="controls">
        <%= text_field_tag "profile[last_name]","",:class=>"input" %>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>
<%end%>

