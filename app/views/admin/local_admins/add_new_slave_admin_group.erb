<%split_array = request.url.split("/") %>

<h4><div class="pull-right">
  <% if split_array.include?("manage_admin_group") %>

      <%= link_to "Slave AG Mgmt" ,manage_admin_group_local_admins_path,:style=>"text-decoration: underline;" %> |
  <%else%>
      <%= link_to "Slave AG Mgmt" ,manage_admin_group_local_admins_path %> |
  <%end%>
  <% if split_array.include?("change_ownership") %>

      <%= link_to "Main AG Mgmt" ,change_ownership_main_admin_group_owners_path,:style=>"text-decoration: underline;" %> |
  <%else%>
      <%= link_to "Main AG Mgmt" ,change_ownership_main_admin_group_owners_path %> |
  <%end%>

  <% if split_array.include?("add_new_slave_admin_group") %>
      <%= link_to "Add New Slave Admin Group" , add_new_slave_admin_group_local_admins_path ,:style=>"text-decoration: underline;" %>
  <%else%>
      <%= link_to "Add New Slave Admin Group" , add_new_slave_admin_group_local_admins_path  %>
  <%end%>
</h4>
<h2>Add New Slave Admin Group</h2>
<%= form_for @admin_group,:url=>admin_group_creation_local_admins_path, :html => { :class => "form-horizontal",:multipart => true  } do |f|%>

    <div class="control-group">
      <label class="control-label" for="input01">Admin Group Name <span style="color:red"> *</span></label>
      <div class="controls">
        <%=f.text_field :name,:class=>"input"%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="input01">Admin Group Description </label>
      <div class="controls">
        <%=f.text_area :description,:class=>"input",:rows => 5%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="input01">Admin Group Owner Email <span style="color:red"> *</span></label>
      <div class="controls">
        <%=text_field_tag :email,"",:class=>"input"%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit :class =>"btn btn-primary"  %>
      <!--<input type="text" class="input-xlarge"  id="input01">-->
    </div>
<% end %>
<%= content_for :head do  %>
    <script type="text/javascript">

        jQuery(function(){
            var admin_group_name = new LiveValidation('admin_group_name',{validMessage:" ",onlyOnSubmit:true});
            admin_group_name.add( Validate.Presence,{failureMessage:" Can't be empty"} );

            var email = new LiveValidation('email',{validMessage:" ",onlyOnSubmit:true});
            email.add( Validate.Presence,{failureMessage:" Can't be empty"} );
        });
    </script>
<% end %>
