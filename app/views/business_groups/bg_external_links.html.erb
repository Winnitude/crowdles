<div class="row">
  <div class="span2"><%=render :partial => "/shared/side_menus_for_bg_create_edit"%>  </div>
  <div class="span7">
<h1>External links</h1>
<%=form_for @business_group , :url => params[:edit_bg].present? ? update_bg_external_links_business_group_path(@business_group,:check_status => :okay) : update_bg_external_links_business_group_path(@business_group) , :html => { :class => "form-horizontal",:multipart => true} do |f| %>



    <% if @business_group.errors.any?  %>
        <div id="error_explanation">
          <h2><%= pluralize(@business_group.errors.count  , "error") %> prohibited this Admin Group from being saved:</h2>

          <ul>
            <% @business_group.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="control-group">
      <label class="control-label" for="input01">Business Group Main Website: <span style="color:red"> </span></label>
      <div class="controls">
        <%=f.text_field :bg_main_website,:class=>"input"%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>


    <div class="control-group">
      <label class="control-label" for="input01">Business Group Blog: <span style="color:red"> </span></label>
      <div class="controls">
        <%=f.text_field :bg_blog,:class=>"input"%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="input01">Business Group Facebook Page: <span style="color:red"> </span></label>
      <div class="controls">
        <%=f.text_field :bg_facebook_page,:class=>"input"%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>
    <%= hidden_field_tag  :email , params[:worker_email] %>
    <div class="control-group">
      <label class="control-label" for="input01">Business Group Twitter Page: <span style="color:red"> </span></label>
      <div class="controls">
        <%=f.text_field :bg_twitter_page,:class=>"input"%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="input01">Business Group Twitter Connection: <span style="color:red"> </span></label>
      <div class="controls">
        <%=f.text_field :bg_twitter_connection,:class=>"input"%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="input01">Business Group LinkedIn Page: <span style="color:red"> </span></label>
      <div class="controls">
        <%=f.text_field :bg_linkedin_page,:class=>"input"%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="input01">Business Group MySpace Page: <span style="color:red"> </span></label>
      <div class="controls">
        <%=f.text_field :bg_myspace_page ,:class=>"input"%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>



    <div class="form-actions">
      <%= f.submit "Create",:class =>"btn btn-primary"  %>
      <a class="btn" href="/">Cancel</a>
      <!--<input type="text" class="input-xlarge"  id="input01">-->
    </div>

<%end%>
  </div>
</div>

