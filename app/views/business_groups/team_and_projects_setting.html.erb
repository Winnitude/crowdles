<div class="row">
  <div class="span2"><%=render :partial => "/shared/side_menus_for_bg_create_edit"%>  </div>
  <div class="span7">
<h1>Team And Project Options</h1>
<%=form_for @business_group , :url => params[:edit_bg].present? ? update_team_and_projects_setting_business_group_path(@business_group,:check_status => :okay) : update_team_and_projects_setting_business_group_path(@business_group) , :html => { :class => "form-horizontal",:multipart => true} do |f| %>



    <% if @business_group.errors.any?  %>
        <div id="error_explanation">
          <h2><%= pluralize(@business_group.errors.count  , "error") %> prohibited this Admin Group from being saved:</h2>

          <ul>
            <% @business_group.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="control-group">
      <label class="control-label" for="input01">Assign The Group's incoming projects to the group responsible: <span style="color:red"> </span></label>
      <div class="controls">
        <%= select_tag :worker_email, options_for_select(["select"]+@workers) %>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="input01">Assign The Group's incoming projects to the group responsible: <span style="color:red"> </span></label>
      <div class="controls">
        <%=f.check_box( :direct_worker_assignment, { :class => 'eula_check' }, "true", "false")%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>



    <div class="control-group">
      <label class="control-label" for="input01">Allow the Project Owner To manage their Project lifecycle: <span style="color:red"> </span></label>
      <div class="controls">
        <%=f.check_box( :self_management, { :class => 'eula_check' },  "true","false")%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="input01">Evaluate the incoming projects via arena approach : <span style="color:red"> </span></label>
      <div class="controls">
        <%=f.check_box( :arena_flag, { :class => 'eula_check' },  "true","false")%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Create",:class =>"btn btn-primary"  %>
      <a class="btn" href="/">Cancel</a>
      <!--<input type="text" class="input-xlarge"  id="input01">-->
    </div>

<%end%>
  </div>
</div>

<%= content_for :head do  %>
    <script type="text/javascript">

        jQuery(function(){





//            var email = new LiveValidation('user_email',{validMessage:" ",onlyOnSubmit:true});
//            email.add( Validate.Email);
//            email.add(Validate.Presence)

            var group_name = new LiveValidation('admin_group_name',{validMessage:" ",onlyOnSubmit:true});

            group_name.add(Validate.Presence)

            var group_email = new LiveValidation('admin_group_ag_email',{validMessage:" ",onlyOnSubmit:true});

            group_email.add(Validate.Presence)
            group_email.add( Validate.Email);

            var telephone_number = new LiveValidation("admin_group_phone_number",{validMessage:" ",onlyOnSubmit:true});
            telephone_number.add( Validate.Format , { pattern: /[+][0-9]{2} [0-9]{10}/g, failureMessage: "Must be in form +xx xxxxxxxxxx" });


        });
    </script>
<% end %>
