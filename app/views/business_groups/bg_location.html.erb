
<%=render :partial => "/shared/side_menus_for_bg_create_edit"%><h1>Business Group Physical Location</h1>
<%=form_for @business_group , :url => update_bg_location_business_group_path(@business_group) , :html => { :class => "form-horizontal",:multipart => true} do |f| %>



    <% if @business_group.errors.any?  %>
        <div id="error_explanation">
          <h2><%= pluralize(@business_group.errors.count  , "error") %> prohibited this Admin Group from being saved:</h2>

