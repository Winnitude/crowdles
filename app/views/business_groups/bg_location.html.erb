        </div>
    <% end %>

    <div class="control-group">
      <label class="control-label" for="input01">Country: <span style="color:red"> </span></label>
      <div class="controls">
        <%=f.autocomplete_field :location_country ,autocomplete_country_detail_name_business_groups_path ,:class=>"input"%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>


    <div class="control-group">
      <label class="control-label" for="input01">State: <span style="color:red"> </span></label>
      <div class="controls">
        <%=f.text_field :location_state,:class=>"input"%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="input01">City: <span style="color:red"> </span></label>
      <div class="controls">
        <%=f.text_field :location_city,:class=>"input"%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">ZipCode: <span style="color:red"> </span></label>
      <div class="controls">
        <%=f.text_field :location_zipcode,:class=>"input"%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="input01">Address: <span style="color:red"> </span></label>
      <div class="controls">
        <%=f.text_field :location_address,:class=>"input"%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="input01">Additional Address: <span style="color:red"> </span></label>
      <div class="controls">
        <%=f.text_field :location_address2,:class=>"input"%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="input01">Contact Number: <span style="color:red"> </span></label>
      <div class="controls">
        <%=f.text_field :location_contact_number1 ,:class=>"input"%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="input01">Alternate Contact Number: <span style="color:red"> </span></label>
      <div class="controls">
        <%=f.text_field :location_contact_number2 ,:class=>"input"%>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>
    </div>


    <div class="form-actions">
      <%= f.submit "Create",:class =>"btn btn-primary"  %>
      <a class="btn" href="/">Cancel</a>
      <!--<input type="text" class="input-xlarge"  id="input01">-->
    </div>

<%end%>


